<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogPreferenceStyle">@style/MyDialogTheme</item>
        <item name="android:colorBackground">@color/colorPrimary</item>

    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">25dip</item>
        <item name="ttlm_strokeColor">#CC616161</item>
        <item name="ttlm_backgroundColor">#CC616161</item>
        <item name="ttlm_arrowRatio">1.4</item>
        <item name="ttlm_elevation">2dp</item>
        <item name="ttlm_strokeWeight">2dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">#66ff0000</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">400</item>
    </style>

    <style name="ToolTipLayoutDefaultStyle.CustomFont" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_font">fonts/at.ttc</item>
    </style>

</resources>
